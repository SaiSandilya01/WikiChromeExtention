{
  "manifest_version": 3,
  "name": "Wiki Chat Assistant",
  "version": "1.0",
  "description": "Ask questions about Wikipedia pages",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
